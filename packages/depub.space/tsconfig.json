{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": false,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": [
    "App.tsx",
    "index.ts",
    "src/**/*",
    "next-env.d.ts",
    "next.config.js",
    ".eslintrc.js",
    "babel.config.js",
    "jest.config.js",
    "sentry.*.js"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ],
  "references": [
    {
      "path": "../theme"
    }
  ]
}