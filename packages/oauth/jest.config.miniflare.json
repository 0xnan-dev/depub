{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "miniflare",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "clover"
  ],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.interface.ts"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "node_modules"
  ],
  "transformIgnorePatterns": [
    "<rootDir>/node_modules/",
    "node_modules"
  ],
  "testMatch": [
    "**/kv-store.spec.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "./tsconfig.spec.json",
      "diagnostics": false,
      "useESM": true
    }
  }
}