{
  "compilerOptions": {
    "outDir": ".",
    "declaration": false,
    "noEmit": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
    "target": "ES2019",
    "lib": [
      "ES2020",
      "ES2020.String",
      "ES2020.Promise",
      "ES2020.Symbol.WellKnown"
    ],
    "pretty": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@depub/*": [
        "packages/*/src"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}